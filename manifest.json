{
  "manifest_version": 3,
  "name": "Smart Screenshot Notes",
  "version": "1.0",
  "description": "Captures screenshots, extracts webpage info using Gemini AI, and saves notes.",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}